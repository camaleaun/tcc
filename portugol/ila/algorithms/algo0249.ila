//prog algoritmo249
variaveis
numerico  c, c1, L, linha,col 
caracter nome
inicio
limpar
escrever "digite nome: " 
posicionar 1,14
ler nome 
limpar
linha=0
L = comprimento(nome) 
se resto( L , 2) <> 0 entao
  para  c = 1  ate L passo 2
     linha=linha+1
     col=1
     para  c1=1  ate c  
       posicionar linha, col
       escrever nome
       col=col + L +2
     proximo
  proximo
senao
  posicionar 3,1
  escrever "Nao faco" 
fim_se  
fim
