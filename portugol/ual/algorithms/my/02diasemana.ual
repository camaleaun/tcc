				semana <- "quarta-feira";
			} senao {
				se (s == 3) {
					semana <- "quinta-feira";
				} senao {
					se (s == 4) {
						semana <- "sexta-feira";
					} senao {
						se (s == 5) {
							semana <- "sÃ¡bado";
						} senao {
							semana <- "domingo";
						}
					}
				}
			}
		}
	}
	imprima semana,"\n";
